## CREATE EC2 INSTANCE
## ADD SECURITY GROUP
## ADD TAGS
## ATTACH KEY-NAME
## ATTACH BOOTSTRAP SCRIPT FOR WORDPRESS
resource "aws_instance" "web" {
    ami           = "ami-0742b4e673072066f"
    instance_type = "t2.micro"
    user_data = file("EFSbootstap.sh")
    security_groups = [ "tf-security" ]
    key_name = "MyFirstEC2"


    tags = {
    Name = "TF--EC2"
    }
}

##CREATE SECURITY GROUP AND ADD DIFFERENT PORTS
resource "aws_security_group" "web-sg" {
    name = "tf-security"
    ingress {
        from_port   = 80
        to_port     = 80
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port = 22
        to_port  = 22
        protocol  = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port   = 8080
        to_port     = 8080
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port   = 2049
        to_port     = 2049
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
        from_port   = 443
        to_port     = 443
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    egress {
        from_port   = 0
        to_port     = 0
        protocol    = "-1"
        cidr_blocks = ["0.0.0.0/0"]
    }
}

